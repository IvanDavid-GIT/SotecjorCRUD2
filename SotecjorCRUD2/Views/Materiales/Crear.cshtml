@model SotecjorCRUD2.Models.Entities.Material

@{
    ViewData["Title"] = "Crear";
}

@section Styles{
 
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Crear Material</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Indice" asp-controller="Materiales">Gestionar Materiales</a></li>
                        <li class="breadcrumb-item active">Crear Material</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">

                    <form asp-action="Crear">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Nombre" class="control-label"></label>
                            <input asp-for="Nombre" class="form-control" id="nombre" name="nombre"/>
                            <span asp-validation-for="Nombre" class="text-danger error" ></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CodigoMaterial" class="control-label"></label>
                            <input asp-for="CodigoMaterial" class="form-control" id="codigoMaterial" name="codigoMaterial" />
                            <span asp-validation-for="CodigoMaterial" class="text-danger error">@ViewData["errorCog"]</span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Cantidad" class="control-label"></label>
                            <input asp-for="Cantidad" class="form-control" id="cantidad" name="cantidad" />
                            <span asp-validation-for="Cantidad" class="text-danger error"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Crear" class="btn btn-success" onclick="CrearMaterial()"/>
                        </div>
                    </form>

                    <div>
                        <a asp-action="Indice">Volver</a>
                    </div>

                </div>
                <!-- /.col-md-6 -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    function CrearMaterial() {
        var isValid = true;
        if (document.getElementById("nombre").value == '') {
            $('#nombre').siblings('span.error').text('Ingrese el nombre');
            isValid = false;
        } else {
            $('#nombre').siblings('span.error').text('');
        }

        if (document.getElementById("codigoMaterial").value == '') {
            $('#codigoMaterial').siblings('span.error').text('Ingrese el Codigo del Material');
            isValid = false;
        } else {
            $('#codigoMaterial').siblings('span.error').text('');
        }
        if (document.getElementById("cantidad").value == '') {
            $('#cantidad').siblings('span.error').text('Ingrese la Cantidad del Material');
            isValid = false;
        } else {
            $('#cantidad').siblings('span.error').text('');
        }
        if (isValid) {

            Swal.fire({
                title: '¿Desea guardar el material?',
                showDenyButton: true,
                showCancelButton: true,
                confirmButtonText: `Guardar`,
                denyButtonText: `No guardar`,
            }).then((result) => {
                /* Read more about isConfirmed, isDenied below */
                if (result.isConfirmed) {

                    var formData = new FormData();
                    formData.append("Nombre", document.getElementById("nombre").value);
                    formData.append("CodigoMaterial", document.getElementById("codigoMaterial").value ==);
                    formData.append("Cantidad", document.getElementById("cantidad").value == );


                   
                } else if (result.isDenied) {
                    Swal.fire('Material no guardado', '', 'info')
                }
            })

        }

    }
</script>

}
